@page
@model CinemaWeb.Pages.Films.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Создать новое</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].AgeRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Film) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FilmId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.FilmId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.FilmId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
