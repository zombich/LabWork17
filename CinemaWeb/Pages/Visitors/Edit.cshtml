@page
@model CinemaWeb.Pages.Visitors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Visitor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Visitor.VisitorId" />
            <div class="form-group">
                
                <label asp-for="Visitor.Phone" class="control-label"></label>
                <input asp-for="Visitor.Phone" class="form-control" />
                <span asp-validation-for="Visitor.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Visitor.Name" class="control-label"></label>
                <input asp-for="Visitor.Name" class="form-control" />
                <span asp-validation-for="Visitor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Visitor.Birthday" class="control-label"></label>
                <input asp-for="Visitor.Birthday" class="form-control" />
                <span asp-validation-for="Visitor.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Visitor.Email" class="control-label"></label>
                <input asp-for="Visitor.Email" class="form-control" />
                <span asp-validation-for="Visitor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Обратно к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
