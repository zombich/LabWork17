@page
@model CinemaWeb.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Row)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Seat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Visitor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ticket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Row)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session.SessionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitor.VisitorId)
            </td>
            <td>
                @if (Model.UserRole == "Администратор")
                {
                    <a asp-page="./Edit" asp-route-id="@item.TicketId">Edit</a><text>|</text>
                }
                <a asp-page="./Details" asp-route-id="@item.TicketId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TicketId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
